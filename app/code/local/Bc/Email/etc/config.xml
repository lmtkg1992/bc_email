<?xml version="1.0"?>
<config>
    <modules>
        <Bc_Email>
            <version>0.1.0</version>
        </Bc_Email>
    </modules>
    <frontend>
        <routers>
            <Bc_Email>
                <use>standard</use>
                <args>
                    <module>Bc_Email</module>
                    <frontName>email</frontName>
                </args>
            </Bc_Email>
        </routers>
        <layout>
            <updates>
                <email module="Bc_Email">
                    <file>bcemail.xml</file>
                </email>
            </updates>
        </layout>
    </frontend>

    <global>
        <blocks>
            <email>
                <class>Bc_Email_Block</class>
            </email>
        </blocks>
        <helpers>
            <email>
                <class>Bc_Email_Helper</class>
            </email>
        </helpers>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <email>
                                            <title>Bluecom - Follow Email</title>
                                        </email>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    

</config>